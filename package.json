{
  "name": "puzzel-co-work",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev -p 3002",
    "build": "next build",
    "start": "next start -p 3002",
    "lint": "eslint .",
    "lint:staged": "lint-staged",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:seed": "prisma db seed",
    "db:reset": "prisma db push --force-reset && prisma db seed",
    "db:studio": "prisma studio",
    "db:up": "docker-compose up -d",
    "db:down": "docker-compose down",
    "generate:secrets": "bash scripts/generate-secrets.sh",
    "prepare": "npx husky install"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.73.0",
    "@prisma/client": "^5.22.0",
    "@types/glob": "^9.0.0",
    "bcryptjs": "^3.0.3",
    "docx": "^9.5.1",
    "glob": "^13.0.1",
    "gray-matter": "^4.0.3",
    "jose": "^6.1.3",
    "next": "16.1.6",
    "openai": "^6.18.0",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "xlsx": "^0.18.5",
    "zod": "^4.3.6",
    "zxcvbn": "^4.4.2"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "husky": "^9.1.6",
    "lint-staged": "^15.3.0",
    "prettier": "^3",
    "prisma": "^5.22.0",
    "tailwindcss": "^4",
    "ts-node": "^10",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --max-warnings=0"
    ],
    "**/*.{json,md,css,scss}": [
      "prettier --check"
    ]
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  },
  "packageManager": "pnpm@9.0.0"
}
